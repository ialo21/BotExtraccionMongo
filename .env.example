# ============================================================
# CREDENCIALES MONGO ATLAS
# ============================================================
MONGO_ATLAS_URL=https://account.mongodb.com/account/login
MONGO_USER=auto002@interseguro.com.pe
MONGO_PASSWORD=RpA$2019

# ============================================================
# RUTAS DE TRABAJO
# ============================================================
# Carpeta donde el navegador descargará los archivos GZ
# (dejar vacío = se usa output/downloads relativo al proyecto)
DOWNLOAD_DIR=

# Carpeta donde se moverán los logs procesados y las evidencias
# (dejar vacío = se usa output/evidencias relativo al proyecto)
OUTPUT_DIR=

# ============================================================
# CONFIGURACIÓN DE EJECUCIÓN
# ============================================================
# Nombre del cluster productivo en Mongo Atlas (como aparece en la UI)
CLUSTER_NAME=nombre-del-cluster

# Timeout máximo en segundos para esperar que cargue la página
PAGE_TIMEOUT=60

# Modo headless: False = se ve el navegador, True = corre en segundo plano
HEADLESS=False

# Usar Chrome instalado en el PC (True) en lugar de Chromium; suele pasar mejor el anti-bot
USE_CHROME_REAL=True

# Usar login con Google SSO (True) o usuario/contraseña (False)
USE_GOOGLE_LOGIN=False

# Solo necesario si USE_GOOGLE_LOGIN=True.
# Ruta al perfil de Chrome donde ya tienes sesión de Google iniciada.
# Cambia "TuUsuario" por el nombre de usuario de ESTA máquina.
# Ejemplo Windows: C:\Users\TuUsuario\AppData\Local\Google\Chrome\User Data
CHROME_PROFILE_DIR=
CHROME_PROFILE_SUBDIR=Default

# ============================================================
# GMAIL / OTP
# ============================================================
# Client ID y Secret del OAuth de Google (Desktop app en Google Cloud Console)
# Con estas dos variables el código genera AuthParaScriptingIago.json automáticamente
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_PROJECT_ID=

# Ruta donde se escribirá el JSON de credenciales generado
GMAIL_CREDS_PATH=AuthParaScriptingIago.json

# Ruta al token generado por generate_token.py (refresh token)
GMAIL_TOKEN_PATH=token.json

# Segundos máximos para esperar el correo con el OTP
OTP_TIMEOUT_SEG=60
